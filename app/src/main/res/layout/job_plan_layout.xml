<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <!-- Plan Price Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardBackgroundColor="@color/primaryColor"
        app:cardUseCompatPadding="false">

        <TextView
            android:id="@+id/tvPlanPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12sdp"
            android:text="@string/abcd_40_days_plan_2999"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Image with Zoom Button -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:gravity="center">

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/ivPlanImage"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/app_logo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/primaryColor"
                android:text="Start Work"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textAllCaps="false"
                app:cornerRadius="20dp"
                app:backgroundTint="@null" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Description -->
    <TextView
        android:id="@+id/tvPlanDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:text="This plan offers 40 days of full access with exciting benefits and rewards."
        android:fontFamily="@font/poppins_regular" />

    <!-- Invite Bonus -->
    <TextView
        android:id="@+id/tvInviteBonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Invite Bonus: â‚¹500"
        android:textColor="@color/light_pink"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_bold" />

</LinearLayout>
